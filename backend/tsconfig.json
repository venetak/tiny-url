{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/server.ts", "src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
